generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Campaign {
  campaign_id Int @id @default(autoincrement())
  name String
  description String
  target_value Float
  image String

  Donation Donation[]

  @@map("campaign")
}

model Donation {
  donation_id Int @id @default(autoincrement())
  name String
  value Float
  campaign_id Int

  campaign Campaign @relation(fields: [campaign_id], references: [campaign_id])

  @@map("donation")
}